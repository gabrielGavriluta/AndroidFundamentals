<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StandardIntents"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/write_website"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/buttonWebsite"
        android:onClick="openWebsiteOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_website"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/write_location"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/buttonLocation"
        android:onClick="openLocationOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_location"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/editTextShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/write_text"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/buttonShare"
        android:onClick="shareTextOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_text"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="@string/write_phone"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/buttonPhone"
        android:onClick="callOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call"
        android:layout_marginStart="16dp"
        android:paddingTop="8dp" />
</LinearLayout>